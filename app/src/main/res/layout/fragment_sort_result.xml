<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/background_primary"
    tools:context=".SortResult"
    >

    <LinearLayout
        android:id="@+id/fragResult_title_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragResult_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.RobotoFlex.LabelMedium" />

        <TextView
            android:id="@+id/fragResult_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1 RESULT"
            android:textAppearance="@style/TextAppearance.RobotoMono.Overline"
            android:textColor="@color/content_secondary"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            />



    </LinearLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/fragResult_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:flow_horizontalGap="16dp"
        app:flow_maxElementsWrap="4"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragResult_title_area" />
</androidx.constraintlayout.widget.ConstraintLayout>