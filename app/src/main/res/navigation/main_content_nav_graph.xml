<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_nav_graph"
    app:startDestination="@+id/sortConfig">

    <fragment
        android:id="@+id/sortConfig"
        android:name="com.example.quicknumbers.SortConfig"
        android:label="fragment_sort_config"
        tools:layout="@layout/fragment_sort_config" >
        <action
            android:id="@+id/action_sortConfig_to_sortResult"
            app:destination="@id/sortResult" />
    </fragment>
    <fragment
        android:id="@+id/sortResult"
        android:name="com.example.quicknumbers.SortResult"
        android:label="fragment_sort_result"
        tools:layout="@layout/fragment_sort_result" />
</navigation>